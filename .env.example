# =================================================================================
# Online Bookstore Microservices - Environment Variables Example
# =================================================================================
# Copy this file to .env and customize the values for your local development setup
# DO NOT commit your actual .env file to version control

# =================================================================================
# COMMON ENVIRONMENT VARIABLES
# =================================================================================

# Spring Profile (local, dev, staging, prod)
SPRING_PROFILES_ACTIVE=local

# AWS Region for all services
AWS_REGION=us-east-1

# AWS Endpoint (use LocalStack for local development)
AWS_ENDPOINT=http://localhost:4566

# =================================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =================================================================================

# Database Host (localhost for local, RDS endpoint for production)
DB_HOST=localhost

# Database Port
DB_PORT=5432

# Database Credentials
DB_USERNAME=postgres
DB_PASSWORD=password

# Note: Individual database names are configured per service in application.yml
# Services use fallback values: bookstore_auth, bookstore_users, bookstore_catalog, bookstore_orders

# =================================================================================
# REDIS CONFIGURATION
# =================================================================================

# Redis Host and Port
REDIS_HOST=localhost
REDIS_PORT=6379

# Redis Password (leave empty for local development)
REDIS_PASSWORD=

# =================================================================================
# ELASTICSEARCH CONFIGURATION
# =================================================================================

# Elasticsearch Host and Port
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# Elasticsearch Protocol (http for local, https for production)
ELASTICSEARCH_PROTOCOL=http

# =================================================================================
# JWT CONFIGURATION
# =================================================================================

# JWT Secret Key (CHANGE THIS IN PRODUCTION)
JWT_SECRET=development-jwt-secret-key-change-in-production-32-characters-minimum

# JWT Token Expiration (in milliseconds)
JWT_EXPIRATION=3600000

# =================================================================================
# COGNITO CONFIGURATION (AWS Cognito for Authentication)
# =================================================================================

# Cognito User Pool ID
COGNITO_USER_POOL_ID=us-east-1_your-pool-id

# Cognito Client ID
COGNITO_CLIENT_ID=your-client-id

# Cognito Issuer URI
COGNITO_ISSUER_URI=https://cognito-idp.us-east-1.amazonaws.com/us-east-1_your-pool-id

# =================================================================================
# SERVICE-TO-SERVICE COMMUNICATION URLs
# =================================================================================

# Auth Service
AUTH_SERVICE_URL=http://localhost:8081/api/v1/auth

# User Service
USER_SERVICE_URL=http://localhost:8082/api/v1/users

# Product Catalog Service
PRODUCT_CATALOG_URL=http://localhost:8083/api/v1/products

# Order Service
ORDER_SERVICE_URL=http://localhost:8084/api/v1/orders

# Search Service
SEARCH_SERVICE_URL=http://localhost:8085/api/v1/search

# Notifications Service
NOTIFICATIONS_URL=http://localhost:8086/api/v1/notifications

# Payment Service
PAYMENT_SERVICE_URL=http://localhost:8087/api/v1/payments

# =================================================================================
# EVENTBRIDGE CONFIGURATION
# =================================================================================

# EventBridge Bus Name
EVENTBRIDGE_BUS_NAME=bookstore-events

# EventBridge Event Source
EVENTBRIDGE_EVENT_SOURCE=bookstore-microservices

# =================================================================================
# MONITORING AND OBSERVABILITY
# =================================================================================

# CloudWatch Metrics (set to true for production)
CLOUDWATCH_METRICS_ENABLED=false

# CloudWatch Namespace
CLOUDWATCH_NAMESPACE=Bookstore/Local

# =================================================================================
# EXTERNAL SERVICE CONFIGURATION
# =================================================================================

# Stripe Configuration (for Payment Service)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Email Configuration (AWS SES)
SES_FROM_EMAIL=noreply@yourbookstore.com
SES_REGION=us-east-1

# SMS Configuration (AWS SNS)
SNS_REGION=us-east-1

# =================================================================================
# DEVELOPMENT SPECIFIC SETTINGS
# =================================================================================

# Enable SQL Logging (set to true for debugging)
SPRING_JPA_SHOW_SQL=true

# Hibernate DDL Auto (validate for prod, create-drop for dev)
SPRING_JPA_HIBERNATE_DDL_AUTO=create-drop

# Logging Level
LOGGING_LEVEL_COM_BOOKSTORE=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=DEBUG
LOGGING_LEVEL_ORG_HIBERNATE_SQL=DEBUG

# =================================================================================
# DOCKER COMPOSE SPECIFIC (for infrastructure setup)
# =================================================================================

# PostgreSQL
POSTGRES_DB=bookstore
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Elasticsearch
ES_JAVA_OPTS=-Xms512m -Xmx512m

# LocalStack Services
SERVICES=sqs,sns,ses,secretsmanager,cognitoidp,dynamodb,events

# pgAdmin (Database Management UI)
PGADMIN_DEFAULT_EMAIL=admin@bookstore.com
PGADMIN_DEFAULT_PASSWORD=admin123

# =================================================================================
# INSTRUCTIONS
# =================================================================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Update the values according to your local setup
# 3. For production deployment, use proper secrets management
# 4. Never commit the .env file to version control
# 5. Use strong, unique secrets in production environments
